{% extends 'base.jinja2' %}

{% block subtitle %}Add a Donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name-input">Donor Name:</label><input type="text" id="name-input" name="name"><br>
    <label for="donation-input">Donation Amount:</label><input type="number" id="donation-input" name="value"><br>
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}